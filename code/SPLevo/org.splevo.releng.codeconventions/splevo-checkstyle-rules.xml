    <metadata name="net.sf.eclipsecs.core.lastEnabledSeverity" value="inherit"/>
  </module>
  <module name="SuppressionFilter">
    <property name="file" value="${samedir}splevo-checkstyle-suppressions.xml"/>
  </module>
